extends layout

block content
  h1= title
  p Welcome to #{title}
  if user 
    p You're already a user!
  else 
    form(method="POST" action="")
    div.form-group
        label(for="firstname") First Name:
        input#firstname.form-controler(type="text" placeholder="John" name="firstname" required="true")
    div.form-group   
        label(for="lastname") Last Name:
        input#lastname.form-controler(type="text" placeholder="Doe" name="lastname" required="true")
    div.form-group
        label(for="username") Username:
        input#username.form-controler(type="text" name="username" required="true")
    div.form-group
        label(for="password") Password:
        input#password.form-controler(type="password" name="password" required="true")
    div.form-group
        label(for="confirmpassword") Confirm password:
        input#confirmpassword.form-controler(type="password" name="confirmpassword" required="true")
        if errors
          p #{errors.errors[0].msg}
    button.btn.btn-primary(type='submit') Submit
