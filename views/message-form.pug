extends layout

block content
  h1= title
  if user
      p Welcome #{user.Username}
        p Create your message here!
        form(method="POST" action="")
          div.form-group
            label(for="title") Title:
            input#title.form-controler(type="text" name="title" required="true")
          div.form-group
            label(for="text") Text:
            input#text.form-controler(type="text" name="text" required="true")
          button.btn.btn-primary(type='submit') Submit
        if errors 
          ul 
            for error in errors.errors
              li!= error.msg
  else 
    p Please 
      a(href="/") login to create a message


